{% extends 'security/user/theme.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('lib/multiple-select/multiple-select.css') }}">
    <link rel="stylesheet" href="{{asset('dist/css/adminlte.min.css')}}">

{% endblock %}

{% block content %}

{% block form_title %}{% endblock form_title %}

<!-- Main content -->
<section class="content">
    <div class="container-fluid">

        {{ form_start(form) }}


        <div class="row">
            <div class="col-md-6">




                <!-- Horizontal Form -->
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Dados de Acesso</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    
                        <div class="card-body">
                            <div class="form-group">
                                    {{ form_label(form.name, null, {'label_attr': {'class': 'col-sm-10 col-form-label'}}) }}
                                <div class="col-sm-12">
                                    {{ form_errors(form.name) }}
                                    {{ form_widget(form.name, { attr: { 'class': 'form-control' }}) }}                                
                                </div>
                            </div>

                            <div class="form-group">
                                {{ form_label(form.username, null, {'label_attr': {'class': 'col-sm-10 col-form-label'}}) }}
                                <div class="col-sm-12">
                                {{ form_errors(form.username) }}
                                {{ form_widget(form.username, { attr: { 'class': 'form-control' }}) }}
                                </div>
                            </div>

                            <div class="form-group">
                                {{ form_label(form.password.first, null, {'label_attr': {'class': 'col-sm-10 col-form-label'}}) }}
                                <div class="col-sm-12">
                                {{ form_errors(form.password.first) }}
                                {{ form_widget(form.password.first, { attr: { 'class': 'form-control' }}) }}
                                </div>
                            </div>

                            <div class="form-group">
                                    {{ form_label(form.password.second, null, {'label_attr': {'class': 'col-sm-10 col-form-label'}}) }}
                                <div class="col-sm-12">
                                    {{ form_errors(form.password.second) }}
                                    {{ form_widget(form.password.second, { attr: { 'class': 'form-control' }}) }}
                                </div>
                            </div>




                            
                        </div>
                        
                    
                </div>
                <!-- /.card -->


            </div>
            <div class="col-md-6">


                <!-- Horizontal Form -->
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Dados do Usuario</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->

                    <div class="card-body">
                        <div class="form-group">
                                {{ form_label(form.enabled, null, {'label_attr': {'class': 'col-sm-10 col-form-label'}}) }}
                            <div class="col-sm-12">
                                {{ form_errors(form.enabled) }}
                                {{ form_widget(form.enabled, { attr: { 'class': 'form-control' }}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.email, null, {'label_attr': {'class': 'col-sm-10 col-form-label'}}) }}
                            <div class="col-sm-12">
                                {{ form_errors(form.email) }}
                                {{ form_widget(form.email, { attr: { 'class': 'form-control' }}) }}
                            </div>
                        </div>

                        <div class="form-group">
                                {{ form_label(form.roles, null, {'label_attr': {'class': 'col-sm-10 col-form-label'}}) }}
                            <div class="col-sm-12">
                                {{ form_errors(form.roles) }}
                                {{ form_widget(form.roles, { attr: { 'class': 'custom-select rounded-0' }}) }}

                            </div>
                        </div>

                        


                    </div>

                    <!-- /.card-body -->
                    <div class="card-footer">                        
                        <button type="submit" class="btn btn-info float-right">{{ btn_acao }}</button>
                        <a href="{{ path('s_user') }}" class="btn btn-default float-left">Voltar</a>
                    </div>
                    <!-- /.card-footer -->

                    

                </div>
                <!-- /.card -->

            
            
            </div>  

                {{ form_end(form) }}
            </div>
        </div>
    </div>

</section>
<!-- END Main content -->
{% endblock content %}

{% block script %}
<script src="{{ asset('lib/multiple-select/jquery.multiple.select.js') }}"></script>
<script src="{{asset('plugins/bootstrap/js/bootstrap.bundle.min.js')}}"></script>
<script src="{{asset('dist/js/adminlte.min.js')}}"></script>
<script src="{{asset('dist/js/demo.js')}}"></script>





    <script>
        $('#user_roles').multipleSelect();
    </script>
{% endblock script %}
