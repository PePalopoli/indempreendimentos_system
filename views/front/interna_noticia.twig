{% set menu_pagina = 'posts' %}
{% extends 'front/layout.twig' %}

{% block content %}
<section class="section-interna-noticia" data-scroll-index='1'>
    <div class="container">
        <div class="conteudo-todo-interna-noticia row ">

            <div class="img-capa-noticia">
                <img src="{{path('imagem', {'path': 'blog', 'imagem': noticia.imagem_capa, 'w': 1296, 'h': 673, 'fit': 'crop'})}}" alt="" class="img-banner-full-bloco">
            </div>

            <div class="primeira-linha">
                <span>{{noticia.categoria_titulo}}</span>
                <p>{{noticia.created_at|date('d/m/Y')}}</p>
            </div>

            <div class="segunda-linha">
                <p>{{noticia.titulo}}</p>
            </div>

            <div class="terceira-linha">
                {{noticia.conteudo|raw}}
            </div>

            <div class="linha-quebra-noticias"></div>
        </div>
    </div>
</section>

<section class="section-noticias" data-scroll-index='2'>
    <div class="container">
        <div class="conteudo-todo-noticias-recentes row">
            <div class="chamada-noticias">
                <h2>Em destaque</h2>
            </div>

            <div class="bloco-lista-noticias row">

                {% for item in noticias %}                

                <div class="col-md-4 col-lg-4 col-12 cada-noticia">
                    <div class="img-cada-noticia">
                        <img src="{{path('imagem', {'path': 'blog', 'imagem': item.imagem_capa, 'w': 370, 'h': 250, 'fit': 'crop'})}}" alt="" class="img-banner-full-bloco">
                    </div>

                    <div class="categoria-noticia">
                        <p>{{item.categoria_titulo}}</p>
                    </div>

                    <div class="titulo-noticia">
                        <p>{{item.titulo}}</p>
                    </div>
                    <div class="chamada-noticia">
                        <p>{{item.resumo}}</p>
                    </div>

                    <div class="link-noticia">                        
                        <a href="{{path('web_noticia_interna', {'url_blog': item.slug})}}">+ ver mat√©ria completa</a>
                    </div>

                </div>

                {% endfor %}
            </div>
            
        </div>
    </div>
</section>
{% include  'containers/contato_paginas_internas.twig' %}


{% endblock %}