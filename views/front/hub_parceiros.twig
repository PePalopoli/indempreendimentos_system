{% set menu_pagina = 'hub-parceiros' %}
{% extends 'front/layout.twig' %}

{% block content %}
<!-- Hub Hero Section -->
    <section class="hub-hero-section">
        <div class="container hub-hero-container">
            <div class="hub-hero-content">
                <h1 class="hub-hero-title" data-aos="fade-up">Hub de Parcerias</h1>
                <p class="hub-hero-text" data-aos="fade-up" data-aos-delay="100">Tenha acesso a uma rede poderosa de parceiros<br>dedicados a promover sua marca.</p>
                <a href="{{(path('web_contato'))}}" class="btn btn-primary hub-hero-btn" data-aos="fade-up" data-aos-delay="200">ENTRE EM CONTATO</a>
            </div>
        </div>
    </section>

    <!-- Hub Features Section -->
    <section class="hub-features-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h2 class="hub-features-title" data-aos="fade-up">Conexões inteligentes para resultados escaláveis.</h2>
                    <p class="hub-features-subtitle" data-aos="fade-up" data-aos-delay="100">Garantimos previsibilidade e controle operacional da sua campanha de marketing:</p>
                </div>
            </div>

            <div class="row hub-features-cards-container" data-aos="fade-up" data-aos-delay="200">
                <!-- Card 1 -->
                <div class="col-md-6">
                    <div class="hub-feature-card">
                        <div class="card-icon money"></div>
                        <h3 class="card-title">Só pague por resultados</h3>
                        <p class="card-text">Custo atrelado a resultados: cobranças geradas apenas por conversões reais.</p>
                    </div>
                </div>
                <!-- Card 2 -->
                <div class="col-md-6">
                    <div class="hub-feature-card">
                        <div class="card-icon team"></div>
                        <h3 class="card-title">Time de Growth</h3>
                        <p class="card-text">Time de Growth focado em potencializar seus resultados.</p>
                    </div>
                </div>
                <!-- Card 3 -->
                <div class="col-md-6">
                    <div class="hub-feature-card">
                        <div class="card-icon engage"></div>
                        <h3 class="card-title">Engajamento</h3>
                        <p class="card-text">Engajamento de audiência segmentada e qualificada. Atraia usuários que realmente interagem.</p>
                    </div>
                </div>
                <!-- Card 4 -->
                <div class="col-md-6">
                    <div class="hub-feature-card">
                        <div class="card-icon diversify"></div>
                        <h3 class="card-title">Diversificação inteligente</h3>
                        <p class="card-text">Aumento na taxa de conversão.</p>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center mt-5" data-aos="fade-up" data-aos-delay="300">
                <div class="col-auto">
                    <a href="{{(path('web_contato'))}}" class="btn btn-primary hub-features-btn">ENTRE EM CONTATO</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Hub Expand Section -->
    <section class="hub-expand-section">
        <div class="container-fluid">
            <div class="row align-items-center">
                <!-- Coluna Esquerda (Imagem) -->
                <div class="col-lg-4 hub-expand-image-col" data-aos="fade-right">
                    <img src="{{asset('imgs/strokeicon.png')}}" alt="Forma Abstrata" class="hub-expand-icon">
                </div>

                <!-- Coluna Direita (Conteúdo) -->
                <div class="col-lg-7 offset-lg-1 hub-expand-content-col" data-aos="fade-left">
                    <h2 class="hub-expand-title">Expanda sem desperdiçar investimento.</h2>
                    <p class="hub-expand-subtitle">Com nossos parceiros, você só paga quando tem resultado.</p>
                    <p class="hub-expand-list-intro">Diferentes modelos de campanha:</p>
                    
                    <div class="hub-expand-list">
                        <div class="row">
                            {% for item in expanda %}
                                <div class="col-12 col-md-4 hub-expand-list-item">
                                    <span class="check-icon"><i class="fas fa-check-circle"></i></span> {{item.title|raw}}
                                </div>
                            {% endfor %}                            
                            
                        </div>
                        
                        {# <div class="row mt-2">
                            <div class="col-12 col-md-3 hub-expand-list-item">
                                <span class="check-icon"><i class="fas fa-check-circle"></i></span> CPI
                            </div>
                            <div class="col-12 col-md-3 hub-expand-list-item">
                                <span class="check-icon"><i class="fas fa-check-circle"></i></span> Revenue Share
                            </div>
                        </div> #}
                    </div>

                    <a href="{{(path('web_contato'))}}" class="btn btn-primary hub-expand-btn">SAIBA MAIS +</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Hub Info Section -->
    <section class="hub-info-section">
        <div class="container">
            <div class="row">
                <!-- Coluna Esquerda (Título) -->
                <div class="col-lg-4 hub-info-title-col" data-aos="fade-right">
                    <h2 class="hub-info-title">Tenha mais diversificação de formatos.</h2>
                </div>

                <!-- Coluna Direita (Conteúdo com Scroll) -->
                <div class="col-lg-8 hub-info-content-col" data-aos="fade-left">
                    <div class="hub-info-scroll-container">
                        
                        {% for item in diversificacao %}
                            <div class="info-block">
                                <h4>{{item.title|raw}}</h4>
                            </div>    
                            <hr>
                        {% endfor %}
                                                
                        
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Seção de Cases -->
    <section class="cases-section">
        <div class="back-img">
            <img src="{{asset('imgs/strokeicon.png')}}" alt="Cases Illustration" class="cases-illustration">
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <h2 class="cases-title" data-aos="fade-up" data-aos-duration="1000">O que nossos<br> clientes dizem.</h2>
                    <div class="cases-carousel-container">
                        <div class="cases-carousel">
                            {% for item in depoimentos %}
                                <div class="case-card">
                                    <h3 class="case-card-title">{{item.title|raw}}</h3>
                                    <p class="case-card-text">{{item.body|raw}}</p>
                                    <div class="case-card-divider"></div>
                                    <img src="{{path('imagem',{'path':'depoimentos','imagem':item.image})}}" alt="{{item.title|raw}}" class="case-card-image">
                                </div>                                
                            {% endfor %}  
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                </div>
            </div>
        </div>
    </section>

    <!-- Solutions Section -->
    <section class="solutions-section">
        <div class="solutions-slider">
            <h2 class="cards-title" data-aos="fade-up" data-aos-duration="1000">
                Com a Booster, sua marca tem o impacto certo<br>com os parceiros certos.
            </h2>
            <div class="solutions-container">
                <div class="solutions-track">
                    {% for item in resultados %}
                        <div class="solution-card" data-index="0" data-expanded-content="{{item.body|raw}}">
                            <div class="solution-icon">
                                <i class="fas {{item.icon}}"></i>
                            </div>
                            <h3 class="solution-title">{{item.title|raw}}</h3>
                            <p class="solution-description"></p>
                        </div>                        
                    {% endfor %}
                    
                </div>
                <div class="slider-controls">
                    <div class="player-container">
                        <button class="play-pause-btn" id="solutionsPlayPauseBtn">
                            <svg class="pause-icon" width="14" height="14" viewBox="0 0 24 24">
                                <rect x="6" y="4" width="4" height="16" fill="currentColor"/>
                                <rect x="14" y="4" width="4" height="16" fill="currentColor"/>
                            </svg>
                            <svg class="play-icon hidden" width="14" height="14" viewBox="0 0 24 24">
                                <path d="M8 5v14l11-7z" fill="currentColor"/>
                            </svg>
                        </button>
                        <div class="slide-indicators">
                            {% for item in resultados %}
                            <span class="indicator" data-index="{{loop.index}}"></span>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

       <!-- Hub CTA Section -->
       <section class="hub-cta-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-9 text-center">
                    <h2 class="hub-cta-text" data-aos="fade-up">
                        <span class="gradient-text-1">Sua marca impactando milhões </span> <br> de pessoas com uma rede de parceiros que respeita a sua estratégia.
                    </h2>
                    <a href="{{(path('web_contato'))}}" class="btn btn-primary hub-cta-btn" data-aos="fade-up" data-aos-delay="100">ENTRE EM CONTATO</a>
                </div>
            </div>
        </div>
    </section>

{% endblock %}