{% set menu_pagina = 'mobile_marketing' %}
{% extends 'front/layout.twig' %}

{% block content %}


	<!-- Mobile Hero Section -->
	<section class="mobile-hero-section">
		<div class="container mobile-hero-container">
			<div class="mobile-hero-content">
				<h1 class="mobile-hero-title" data-aos="fade-up">Mobile Marketing</h1>
				<p class="mobile-hero-subtitle" data-aos="fade-up" data-aos-delay="100">Atraia, converta e engaje usuários para o seu aplicativo</p>
				<a href="{{path('web_contato')}}" class="btn btn-primary mobile-hero-btn" data-aos="fade-up" data-aos-delay="200">ENTRE EM CONTATO</a>
			</div>
		</div>
	</section>

	<!-- Apps Section -->
	<section class="apps-section">
		<div class="container">
			<h2 class="apps-title" data-aos="fade-up">Sua marca em 16 mil apps.</h2>
			<h3 class="apps-subtitle" data-aos="fade-up" data-aos-delay="100">Impacte milhões de pessoas.</h3>
			<p class="apps-description" data-aos="fade-up" data-aos-delay="200">Expandimos seu alcance sem perder a estratégia de vista.</p>
		</div>

		<div class="apps-slider-container">
			<div class="apps-gradient-left"></div>
			<div class="apps-slider">
				<div class="apps-logos">

					{% for item in apps %}
						<img src="{{path('imagem',{'path':'apps','imagem':item.image})}}" alt="{{item.title|raw}}" class="app-logo">
					{% endfor %}


				</div>
				<!-- Clone dos logos para animação contínua -->
				<div class="apps-logos">
					{% for item in apps %}
						<img src="{{path('imagem',{'path':'apps','imagem':item.image})}}" alt="{{item.title|raw}}" class="app-logo">
					{% endfor %}
				</div>
			</div>
			<div class="apps-gradient-right"></div>
		</div>
	</section>
	<!-- Mobile Marketing Steps Carousel -->
        <section class="steps-carousel-section">
        <div class="steps-carousel">
            <div class="container">
                <div class="row align-items-center">
                    <!-- Coluna de Texto -->
                    <div class="col-lg-6 steps-content">
                        <div class="steps-wrapper">
                            <h2 class="slider-txt">Como impulsionamos sua marca com mobile marketing.</h2>
                            {% for item in impulsos %}
                                
                            <div class="step-item {% if item.id == 1 %}active{% endif %}" data-step="{{item.id}}">
                                <div class="step-header">
                                    <div class="step-number">{{item.id}}</div>
                                    <h3 class="step-title">{{item.title|raw}}</h3>
                                </div>
                                
                            </div>
                            {% endfor %}
                            
                        </div>
                        <!-- Controles do carrossel -->
                        <div class="steps-controls">
                            <div class="steps-dots">
                                {% for item in impulsos %}
                                    <span class="dot {% if item.id == 1 %}active{% endif %}" data-step="{{item.id}}"></span>
                                {% endfor %}
                                
                            </div>
                            <button class="steps-pause-btn">
                                <i class="fas fa-pause"></i>
                            </button>
                        </div>
                    </div>
                    <!-- Coluna da Imagem -->
                    <div class="col-lg-5 steps-image">
                        <div class="image-wrapper">
                            {% for item in impulsos %}
                                {# <img src="{{path('imagem',{'path':'impulsos','imagem':item.image})}}" alt="{{item.title|raw}}" class="step-image {% if item.id == 1 %}active{% endif %}" data-step="{{item.id}}"> #}
                                {# <img src="{{asset('web/upload/impulsos')}}etapa_0{{item.id}}.gif" alt="{{item.title|raw}}" class="step-image {% if item.id == 1 %}active{% endif %}" data-step="{{item.id}}"> #}
								<img src="{{ asset('imgs/impulsos/etapa_0' ~ item.id ~ '.gif') }}" alt="{{ item.title|raw }}" class="step-image {% if item.id == 1 %}active{% endif %}" data-step="{{ item.id }}">
                            {% endfor %}
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

	<!-- Hub Features Section -->
	<section class="hub-features-section" id="hub-features">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-8 text-center">
					<h2 class="hub-features-title" data-aos="fade-up">Conectamos seu app ao público certo. Aquele que fica.</h2>
					<p class="hub-features-subtitle" data-aos="fade-up" data-aos-delay="100">Garantimos previsibilidade e controle operacional da sua campanha de marketing.</p>
				</div>
			</div>

			<div
				class="row hub-features-cards-container" data-aos="fade-up" data-aos-delay="200">
				<!-- Card 1 -->
				<div class="col-md-6">
					<div class="hub-feature-card">
						<div class="card-icon machine-learning"></div>
						<h3 class="card-title">Machine Learning</h3>
						<p class="card-text">Inteligência artificial para otimizar campanhas em tempo real, garantindo maior eficiência e conversão.</p>
					</div>
				</div>
				<!-- Card 2 -->
				<div class="col-md-6">
					<div class="hub-feature-card">
						<div class="card-icon algoritmo"></div>
						<h3 class="card-title">Algoritmo preditivo. Segmentação precisa.</h3>
						<p class="card-text">Alcançamos o público ideal com base em dados demográficos, comportamentais, de interesse, dispositivos, entre outros.</p>
					</div>
				</div>
				<!-- Card 3 -->
				<div class="col-md-6">
					<div class="hub-feature-card">
						<div class="card-icon escalavel"></div>
						<h3 class="card-title">Retargeting Escalável</h3>
						<p class="card-text">Campanhas de retargeting automatizadas e otimizadas por IA, ampliando suas conversões em múltiplos canais.</p>
					</div>
				</div>
				<!-- Card 4 -->
				<div class="col-md-6">
					<div class="hub-feature-card">
						<div class="card-icon monitoramento"></div>
						<h3 class="card-title">Monitoramento de Tráfego</h3>
						<p class="card-text">Monitoramos e avaliamos a qualidade de tráfego de todos nossos provedores.</p>
					</div>
				</div>
			</div>

			<div class="row justify-content-center mt-5" data-aos="fade-up" data-aos-delay="300">
				<div class="col-auto">
					<a href="{{path('web_contato')}}" class="btn btn-primary hub-features-btn">ENTRE EM CONTATO</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Mobile Marketing Info Section -->
	<section class="mobile-info-section">
		<div class="container">
			<div
				class="row align-items-start">
				<!-- Coluna do Título -->
				<div class="col-lg-5">
					<h2 class="mobile-info-title">Diversifique seus canais. Amplifique seus resultados.</h2>
				</div>
				<!-- Coluna do Acordeão -->
				<div class="col-lg-7">
					<div class="mobile-accordion">

						{% for item in diversifique %}


							<!-- Item 1 -->
							<div class="accordion-item">
								<div class="accordion-header">
									<h3 class="accordion-title">{{item.title|raw}}</h3>
									<div class="accordion-icon">
										<span class="plus">+</span>
										<span class="minus">-</span>
									</div>

								</div>
								<div class="accordion-content">
									{{item.body|raw}}
								</div>
								<div class="accordion-divider"></div>
							</div>

						{% endfor %}

					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Retargeting Section -->
	<section class="retargeting-section">
		<div class="container">
			<h2 class="retargeting-title">Baixar é fácil.<br>Reter é nossa estratégia.</h2>
			<p class="retargeting-subtitle">Reengaje usuários, reduza churn e maximize seu ROI com retargeting eficiente.</p>
			<div class="retargeting-box">
				<div class="retargeting-scroll">

                    {% for item in reter %}                        
                        <div class="retargeting-topic">
                            <div class="retargeting-topic-header">
                                <span class="retargeting-dot"></span>
                                <h3>{{item.title|raw}}</h3>
                            </div>
                            {{item.body|raw}}
                        </div>
                    {% endfor %}

					
				</div>
			</div>
			<div class="retargeting-btn-wrapper">
				<a href="{{path('web_contato')}}" class="btn btn-primary">ENTRE EM CONTATO</a>
			</div>
		</div>
	</section>

	<!-- Seção de Cases -->
	<section class="cases-section">
		<div class="back-img">
			<img src="{{asset('imgs/strokeicon.png')}}" alt="Cases Illustration" class="cases-illustration">
		</div>
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<h2 class="cases-title">O que nossos<br>clientes dizem.</h2>
					<div class="cases-carousel-container">
						<div class="cases-carousel">
							{% for item in depoimentos %}
                                <div class="case-card">
                                    <h3 class="case-card-title">{{item.title|raw}}</h3>
                                    <p class="case-card-text">{{item.body|raw}}</p>
                                    <div class="case-card-divider"></div>
                                    <img src="{{path('imagem',{'path':'depoimentos','imagem':item.image})}}" alt="{{item.title|raw}}" class="case-card-image">
                                </div>                                
                            {% endfor %}  
						</div>
					</div>
				</div>
				<div class="col-lg-6"></div>
			</div>
		</div>
	</section>

	<!-- Gradient Cards Section -->
	<section class="gradient-cards-section">
		<div class="container">
			<h2 class="gradient-cards-title">Sem competição, apenas sinergia</h2>
			<p class="gradient-cards-subtitle">Nossos serviços de mobile marketing são projetados para complementar suas estratégias existente de RTB (Real-Time Bidding) em mídia paga e não para competir com elas.</p>
			<div class="row justify-content-center gradient-cards-row">
				<div class="col-lg-4 col-md-6 mb-4">
					<div class="gradient-card">
						<img src="{{asset('imgs/tiktok.png')}}" alt="TikTok for Business" class="gradient-card-img">
					</div>
				</div>
				<div class="col-lg-4 col-md-6 mb-4">
					<div class="gradient-card">
						<img src="{{asset('imgs/meta.png')}}" alt="Meta" class="gradient-card-img">
					</div>
				</div>
				<div class="col-lg-4 col-md-6 mb-4">
					<div class="gradient-card">
						<img src="{{asset('imgs/googleads.png')}}" alt="Google Ads" class="gradient-card-img">
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- MMPs Section -->
	<section class="mmp-section">
		<div class="container">
			<h2 class="mmp-title" data-aos="fade-up" data-aos-duration="1000">
				Integração rápida e segura com os principais MMPs.
			</h2>
			<div class="mmp-container">
				<div class="row align-items-center">
					<div class="col-md-4" data-aos="fade-up" data-aos-duration="1000">
						<img src="{{asset('imgs/singular-logo.png')}}" alt="Singular" class="mmp-logo">
					</div>
					<div class="col-md-4" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="200">
						<img src="{{asset('imgs/appsflyer-logo.png')}}" alt="AppsFlyer" class="mmp-logo">
					</div>
					<div class="col-md-4" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="400">
						<img src="{{asset('imgs/kochava-logo.png')}}" alt="Kochava" class="mmp-logo">
					</div>
				</div>
				<div class="row align-items-center">
					<div class="col-md-6" data-aos="fade-up" data-aos-duration="1000">
						<img src="{{asset('imgs/adjust-logo.png')}}" alt="Adjust" class="mmp-logo">
					</div>
					<div class="col-md-6" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="200">
						<img src="{{asset('imgs/tune-logo.png')}}" alt="Tune" class="mmp-logo">
					</div>
				</div>
			</div>
			<a href="{{path('web_contato')}}" class="mmp-contact-btn">Entre em contato</a>
		</div>
	</section>


{% endblock %}
